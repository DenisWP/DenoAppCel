<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/edtCodBarras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="@string/edtCodBarras" />

    <Button
        android:id="@+id/btnLeitor"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/txtCodProduto"
        android:layout_marginTop="75dp"
        android:text="@string/btnLeitor"
        android:onClick="Scannear"/>

    <TextView
        android:id="@+id/txtCodProduto"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:hint="@string/txtCodProduto"/>

    <TextView
        android:id="@+id/txtDescProduto"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="164dp"
        android:gravity="center"
        android:hint="@string/txtDescProduto"
        android:maxLines="3"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtSifrao"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="115dp"
        android:layout_marginStart="44dp"
        android:gravity="end"
        android:text="@string/txtSifrao"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtValor"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_alignEnd="@+id/btnVoltar"
        android:layout_alignTop="@+id/txtSifrao"
        android:hint="@string/txtValor"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:onClick="voltarInicio"
        android:text="@string/btnVoltar"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/txtValor"
        android:onClick="limpar"
        android:text="@string/btnLimpar"
        android:textColor="@android:color/white" />

</RelativeLayout>