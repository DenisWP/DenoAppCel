<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_height="150dp"
        android:layout_width="match_parent"
        android:id="@+id/FrameLeitor">

        <me.dm7.barcodescanner.zxing.ZXingScannerView
            android:id="@+id/ZxingScanner"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="top|end"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/LayoutInformacoes"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/FrameLeitor"
        android:orientation="vertical">

        <RelativeLayout

            android:id="@+id/RelativedoLinear"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtCodProduto"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDescProduto"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:maxLines="3"
                android:textColor="#000000"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSifrao"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/txtValor"
                android:layout_marginStart="42dp"
                android:text="R$: "
                android:gravity="right"
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtValor"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="15dp"
                android:layout_marginEnd="39dp"
                android:textColor="#000000"
                android:textSize="50sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="voltarInicio"
        android:text="Voltar"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnLimpar"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:onClick="limpar"
        android:text="Limpar"
        android:textColor="@android:color/white" />

</RelativeLayout>